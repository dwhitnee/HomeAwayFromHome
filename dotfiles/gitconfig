[merge]
    tool = emerge
[mergetool "ediff"]
    cmd = emacs -eval \"(ediff-merge-files-with-ancestor \\\"$PWD/$LOCAL\\\" \\\"$PWD/$REMOTE\\\" \\\"$PWD/$BASE\\\" nil \\\"$PWD/$MERGED\\\")\"

[diff]
 tool = p4merge

[difftool "p4merge"]
 cmd = p4merge $LOCAL $REMOTE

[difftool]
 prompt = false

