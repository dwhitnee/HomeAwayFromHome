[alias]
  st = status
  ci = commit -a
  br = branch
  co = checkout
  df = diff
  lg = log -p
  graph = log --graph --decorate --all
  sync = pull --rebase
  unadd = reset --
  unedit = checkout --
  unstage = reset HEAD
  unrm = checkout --
  unstash = stash pop
  dag = log --graph --format='format:%C(yellow)%h%C(reset) %C(blue)\"%an\" <%ae>%C(reset) %C(magenta)%cr%C(reset)%C(auto)%d%C(reset)%n%s' --date-order
  undo-commit = reset --soft HEAD^
  frebase = pull --rebase

[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  excludesfile=/home/dwhitney/.gitignore
  pager = less -FMRiX

